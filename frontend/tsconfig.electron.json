{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.electron.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "types": ["node", "electron"],
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "noEmit": false,
    "sourceMap": true
  },
  "include": ["electron/**/*"]
}
